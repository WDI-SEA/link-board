<div>
	<h2><%= @post.title %></h2>
</div>

<div>
	<p>Tags:
	  <% @post.tags.each do |tag| %>
	    <a href="#"><%= tag.name %></a>
	  <% end %>
	</p>
</div>

<hr />
<h3>Comments</h3>

<div>
	<% @post.comments.each do |comment| %>
		<p>"<%= comment.content %>"</p>
	<% end %>
</div>

<%= link_to 'Add Comment', new_comment_path(:post => @post.id) %>
