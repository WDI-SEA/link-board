<div class="row">
  <div class="small-6 columns small-offset-3">
    <h1>Login</h1>

    <%= form_for :user do |f| %>
      
      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit 'Submit', :class => "button" %>

    <% end %>
  </div>
</div>