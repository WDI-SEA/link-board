<h1>Login to this awesome website</h1>
<p>Find me in app/views/sessions/new.html.erb</p>

<!-- :user is referring to the user model. sessions doesn't have a model -->
<!-- submits to post login -->
<%= form_for(:user) do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit 'Login' %>

<% end %>