<h1>Signup</h1>

<%= form_for :user do |form| %>
	<div><%= form.text_field :name, placeholder: "Name" %></div>
	<div><%= form.email_field :email, placeholder: "Email" %></div>
	<div><%= form.password_field :password, placeholder: "Enter password" %></div>
	<div><%= form.submit "Signup" %></div>
<% end %>
<a href="/">Back to Home</a>