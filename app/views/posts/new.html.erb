<div class="page_title">Submit</div>


<%= form_for @post do |p| %>
	<div>
		<%= p.label :title %>
		<%= p.text_field :title %> 
	</div>
	<div>
		<%= p.label :link %>
		<%= p.text_field :link %>
	</div>
	<%= p.submit %>

<% end %>

<h1>User: <%= @current_user %></h1>

<%= link_to "Back to all", "/posts" %>
