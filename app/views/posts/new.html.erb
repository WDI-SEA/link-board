
  <h2>Add a New Post</h2>
  <%= link_to "Back to All Posts", root_path %>

  <%= form_for @post do |p| %>
    <div>
      <%= p.label :title %>
      <%= p.text_field :title %>    
    </div>
    <div>
      <%= p.label :link %>
      <%= p.text_field :link %>    
    </div>

    <%= p.submit %>

  <% end %>
