<h1>Add a Post</h1>
<p>Find me in app/views/posts/new.html.erb</p>

<%= form_for @post do |t| %>
	<div class="form-group">
		<%= t.label :title %>
		<%= t.text_area :title, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= t.label :link %>
		<%= t.text_area :link, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= t.label :user %>
		<%= t.text_area :user, placeholder: @current_user.name, class: 'form-control' %>
	</div>
	  <%= t.submit  'Add Post', class: 'btn btn-info' %>
<% end %>