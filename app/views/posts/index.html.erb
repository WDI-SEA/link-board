<div class="row">
  <div class="col-xs-8">
    <h1>GA News</h1>
  </div>
  <div class="col-xs-4">
    


    <!--  Add modal for new post -->
    <a href="#" class="btn btn-primary glyphicon glyphicon-plus pull-right" 
       data-toggle="modal" 
       data-target="#add_post"></a>
    <div id="add_post" class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="gridSystemModalLabel">New Post</h4>
          </div>
          <div class="modal-body">
            <%= bootstrap_form_for @new_post, url: posts_path do |f| %>
              <%= f.text_field :title %>
              <%= f.url_field :link %>

              <%= f.primary %>
            <% end %>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->



  </div>
</div>

<% @posts.each do |post| %>
<div class="well">
  <h2><%= link_to post.title, post.link %></h2>
  <strong>By <%= post.user.name %></strong>
  <p><%= link_to 'Comments', post_comments_path(post) %> (<%= post.comment.length %>)</p>
  <%= render partial: 'posts/voting', locals: {post: post} %>
</div>
<% end %>