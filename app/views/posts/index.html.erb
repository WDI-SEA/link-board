

<div class="row text-center">
  <h1>Poplinks</h1>
  <%= link_to('Add Link', posts_path) %>
  <%= link_to('Signup', users_path) %>
  <%= link_to('Login', login_path) %>
  <%= link_to('Logout', logout_path, method: :delete) %>  
</div>

<div class="row">
  <div class="postbox small-offset-3 small-6 columns">
    <% @posts.each do |p| %>
      <p><a href="<%= p.link %>"><%= p.title %></a></p>
    <% end %>
  </div>
</div>