<h1>Posts</h1>

<% @posts.each do |post| %>
<div class="well">
	<h3><%= link_to post.title, post.link %></h3>
	<div>Author: <%= post.user.name %></div>
	<p># of <%= link_to 'Comments', post_comments_path(post) %> <%= post.comment.count %></p>
<%= render partial: 'posts/voting', locals: {post: post} %>
<% end %>
</div>	


