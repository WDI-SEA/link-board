<br>
<% @posts.each do |p| %>
  <div>

    <p>
      <span class="sub-text"><%= (@posts.index(p)+1).to_s %>. <i class="fa fa-caret-up" aria-hidden="true"></i></span>
      <%= p.title %>
      <span class="sub-text">
        <small>(<%= p.link %>)</small>
      </span>
    </p>
    <p class="sub-text"><small><%= p.points%> points by <%= p.user.name %> <%= time_ago_in_words(p.created_at) %> ago | hide | past | web |
      <a href="comments/<%= p.id %>">
        <% if p.comments.length > 0 %>
          <%=p.comments.length%> comments
        <% else %>
          discuss
        <% end %>
      </a>
    </small></p>
    <div>
</div>

  </div>
<% end %>
