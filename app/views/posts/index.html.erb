<h1 class="posts"> Posts </h1>

<% @posts.each do |post| %>
  <div class="well">
    <a href="<%= post.link %>"><%= post.title %></a>
    <p>Author: <%= post.user.name %></p>
    <%= render partial: 'posts/voting', locals: {post: post} %>
      <p> <%= link_to 'Comments', post_comments_path(post) %> : <%= post.comment.count %></p>
  </div>
<% end %>