<h1>Posts#edit</h1>
<p>Find me in app/views/posts/edit.html.erb</p>

<%= form_for @post do |t| %>
	<div class="form-group">
		<%= t.label :title %>
		<%= t.text_area :title, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= t.label :link %>
		<%= t.text_area :link, class: 'form-control' %>
	</div>
	<%= t.submit 'Update Post', class: 'btn btn-info' %>
<% end %>