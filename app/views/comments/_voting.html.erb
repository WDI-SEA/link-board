<div class="voting">
  <%= link_to '<span class="glyphicon glyphicon-arrow-up"></span>'.html_safe, post_comment_upvote_path(post, comment), :method => :post %>
  <strong><%= comment.votes.inject(0) {|sum, v| sum + v.value} %></strong>
  <%= link_to '<span class="glyphicon glyphicon-arrow-down"></span>'.html_safe, post_comment_downvote_path(post, comment), :method => :post %>
</div>