<div class="comment-form">
	<%= form_for([@post,@post.comments.build]) do |f| %>
		<p class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class: 'form-control' %>
		</p>
		<p class="form-group">
			<%= f.label :body %><br>
			<%= f.text_area :body, class: 'form-control' %>
		</p>
		<br>
		<p>
			<%= f.submit 'Add Comment', class: 'btn btn-info' %>
		</p>
		<% end %>
	</div>