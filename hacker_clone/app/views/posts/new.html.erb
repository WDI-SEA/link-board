<div class="col-xs-8 col-xs-offset-2 text-left">
<h1>New Post</h1>
  <%= bootstrap_form_for :post do |p| %>
    <%= p.text_field :title, placeholder: "Enter your title"  %>
    <%= p.text_field :link, placeholder: "Enter your link"  %>
    <%= p.hidden_field :user_id, :value => @current_user.id  %>
    <%= p.primary "Submit", class: 'btn default-btn' %>
  <% end %>
</div>
